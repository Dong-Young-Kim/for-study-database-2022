<style>
    div{
        padding:10px;
    }
    div.userInfo {
        width: 160px;
        float: left;
        margin:10px;
        padding:20px;
        background-color: #f6f6f6;
    }
    div.mainInfo {
        padding-left: 240px;
    }
    .btn {
      color: #fff;
      background-color: #274e97;
      width: 100%;
      height:35px;
      margin-top: 20px;
      border: none;
    } 
    table {
        width: 100%;
        border-collapse: collapse;
    }
    table td {
	padding: 13px;
    }
    table thead td {
        background-color: #274e97;
        color: #ffffff;
        font-weight: bold;
        font-size: 13px;
        border: 1px solid #54585d;
    }
    table tbody td {
        color: #636363;
        border: 1px solid #dddfe1;
    }
    table tbody tr {
        background-color: #f9fafb;
    }
    table tbody tr:nth-child(odd) {
        background-color: #ffffff;
    }

</style>

<div>
    <strong style="color: #274e97; font-size: 35px">차량 예약/구매 시스템</strong>
</div>

<div>
    <div class="userInfo">
        <form method="post" action="/logout">
            <div>
                <strong>{{userName}}</strong>
            </div>
            <div>
            {{userType}}
            </div>
            <button class='btn' type="submit">로그아웃</button>
        </form>
    </div>
    <div class="mainInfo">
        <h3>차량 모델 조회 및 예약</h3>
            <table>
                <colgroup>
                    <col width="30%">
                    <col width="30%">
                    <col width="25%">
                    <col width="15%">
                    <col width="1.6%">
                </colgroup>
                <thead>
                    <tr>
                        <td>모델</td>
                        <td>가격 (~부터)</td>
                        <td>예약 가능 수량</td>
                        <td>예약</td>
                    </tr>
                </thead>
            </table>
            <div style="overflow-y:auto; max-height:250px; padding:0px !important;">
                <table>
                    <colgroup>
                    <col width="30%">
                    <col width="30%">
                    <col width="25%">
                    <col width="15%">
                    </colgroup>
                    <tbody>
                        {{#each veh_model}}
                        <form form id="newRsrv" method="post" action="/cus/rsrv">
                            <tr>
                                <td><strong>{{NAME}}</strong></td>
                                <td>${{MIN_PRICE}} ~</td>
                                <td>{{STOCK}}</td>
                                <td>
                                {{!-- <button class='btn' type="submit">수정</button> --}}
                                <button class='btn' type="submit" value={{NAME}} style="margin: 0px !important;" >예약</button>
                            </td>
                            </tr>
                        </form>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        <h3 style="margin-top: 50px;">차량 예약 조회</h3>

            <table>
                <colgroup>
                    <col width="30%">
                    <col width="30%">
                    <col width="25%">
                    <col width="15%">
                    <col width="1.6%">
                </colgroup>
                <thead>
                    <tr>
                        <td>모델</td>
                        <td>가격</td>
                        <td>차대번호</td>
                        <td>예약취소</td>
                    </tr>
                </thead>
            </table>
            <div style="overflow-y:auto; max-height:250px; padding:0px !important;">
                <table>
                    <colgroup>
                        <col width="30%">
                        <col width="30%">
                        <col width="25%">
                        <col width="15%">
                    </colgroup>
                    <tbody>
                        {{#each rsrv_vehicle}}
                        <form form id="newRsrv" method="post" action="/cus/rervDel">
                            <tr>
                                <td><strong>{{name}}</strong></td>
                                <td>${{price}}</td>
                                <td>{{vin}}</td>
                                <td>
                                    <button class='btn' type="submit" style="margin: 0px !important;" >삭제</button>
                                </td>
                            </tr>
                        </form>
                        {{/each}}
                    </tbody>
                </table>
            </div>
    </div>
</div>

